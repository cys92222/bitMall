<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="goods">
  <select id="listAll" resultType="goodsVo">
  select * from goods 
  <if test="keyword != null and keyword != ''">
  	where ${searchcolumn} like '%' || #{keyword} ||'%'			
  </if> 													
  </select>
  <insert id="insert">
	insert into goods values(#{no}, #{item}, #{qty}, #{price}, 'ball1.jpg', #{detail})
  </insert>
  <update id="update">
  	update goods set item=#{item}, qty=#{qty}, price=#{price}, fname='ball1.jpg', detail=#{detail}
  	where no=#{no}
  </update>
  <delete id="delete">
  	delete goods where no=#{no}
  </delete>
  <update id="plusQty">
  	update goods set qty = qty + #{qty} where no=#{no}
  </update>
   <update id="minusQty">
  	update goods set qty = qty - #{qty} where no=#{no}
  </update>
  <select id="detail" resultType="GoodsVo">
  	select * from goods where no=#{no}
  </select>
</mapper>